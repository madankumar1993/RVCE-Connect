<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lytFund"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lytFundTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblFundMessage"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Message" >
        </TextView>

        <ImageView
            android:id="@+id/fundImgStatus"
            android:layout_width="16px"
            android:layout_height="16px"
            android:layout_marginBottom="2px"
            android:layout_marginTop="2px"
            android:src="@drawable/disconnected">
            </ImageView>
    </LinearLayout>

    <EditText
        android:id="@+id/txfFundMessage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Your Message"
        android:textSize="18sp" >
    </EditText>
    
    <TextView android:id="@+id/lbltarget"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:text="Target"/>

    <Spinner
        android:id="@+id/lblFundTarget"
        android:layout_width="wrap_content"
        android:layout_height="54dp" >
    </Spinner>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60sp"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:paddingTop="5sp" >

        <Button
            android:id="@+id/btnFundSend"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/rvconnect_send"
            android:text="Send\n" >
        </Button>

        <Button
            android:id="@+id/btnFundBroadcast"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/rvconnect_broadcast"
            android:text="Broad-\ncast" >
        </Button>

        <Button
            android:id="@+id/btnFundClearLog"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/rvconnect_clear"
            android:text="Clear\nLogs" >
        </Button>
    </LinearLayout>

    <TextView
        android:id="@+id/fundLblLogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incoming Messages" >
    </TextView>

    <EditText
        android:id="@+id/lblFundLog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.12"
        android:editable="false"
        android:gravity="top|left"
        android:text=""
        android:textSize="17sp" >
    </EditText>

</LinearLayout>