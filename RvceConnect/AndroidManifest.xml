            -->
        </activity>
        <activity android:name="com.rvceconnect.main.ChatScreen" android:label="Chat Screen">
            <intent-filter>
                <action android:name="android.intent.action.EDIT"/>
                <category android:name="android.intent.category.ALTERNATIVE"/>
            </intent-filter>
        </activity>
        <activity android:name="com.rvceconnect.main.ConfigActivity" android:label="Rvce Connect Client Configuration">
            <intent-filter>
                <action android:name="android.intent.action.EDIT"/>
                <category android:name="android.intent.category.ALTERNATIVE"/>
